<Window x:Class="TicketSystem.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TicketSystem"
      mc:Ignorable="d" 
      Height="800"
      Width="800"
      MaxHeight="800" MaxWidth="800">

    <Grid Background="#FFF3F3D6">
        
        <DockPanel Grid.ColumnSpan="2">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"  Height="60" Width="800" HorizontalAlignment="Center">
                <Button Content="Запросы" Click="Button_Click_Page1" Height="60" Width="400" FontSize="20" />
                <Button Content="Учетная запись" Click="Button_Click_Page2" Height="60" Width="400" FontSize="20" Background="#FF81A6F0" />
            </StackPanel>
            <Frame Height="724" x:Name="MainFrame" NavigationUIVisibility="Hidden" />
        </DockPanel>

    </Grid>
</Window>
